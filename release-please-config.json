{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": [
    "node-workspace"
  ],
  "release-type": "node",
  "separate-pull-requests": true,
  "include-v-in-tag": true,
  "include-component-in-tag": false,
  "packages": {
    "packages/api": {
      "package-name": "@my/nestjs-api",
      "path": "packages/api",
      "release-type": "node",
      "component": "api",
      "changelog-path": "packages/api/CHANGELOG.md",
      "extra-files": ["packages/api/package.json"]
    },
    "packages/auth": {
      "package-name": "@my/nestjs-auth",
      "path": "packages/auth",
      "release-type": "node",
      "component": "auth",
      "changelog-path": "packages/auth/CHANGELOG.md",
      "extra-files": ["packages/auth/package.json"]
    },
    ".": {
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false,
      "draft": false,
      "prerelease": false
    }
  }
}
