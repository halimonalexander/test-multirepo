{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": [
    "node-workspace"
  ],
  "release-type": "node",
  "separate-pull-requests": true,
  "include-v-in-tag": false,
  "include-component-in-tag": false,
  "packages": {
    "packages/api": {
      "package-name": "@my/nestjs-api",
      "path": "packages/api",
      "component": "api"
    },
    "packages/auth": {
      "package-name": "@my/nestjs-auth",
      "path": "packages/auth",
      "component": "auth"
    }
  }
}
